<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.fragment.OtherFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="这里是OtherFragment" />

    <!--
    android:gravity与android:layout_gravity 区别：
    android:gravity用于设置View中内容相对于View组件的对齐方式，
    android:layout_gravity用于设置View组件相对于Container的对齐方式。
    -->
    <Button
        android:id="@+id/btn_jump_to_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="返回到上一个Fragment"/>

</FrameLayout>